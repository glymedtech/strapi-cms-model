{
  "collectionName": "components_shared_banners",
  "info": {
    "displayName": "Banner"
  },
  "options": {},
  "attributes": {
    "PageType": {
      "type": "string",
      "required": true
    },
    "AlignmentOnDesktop": {
      "type": "enumeration",
      "required": true,
      "default": "left",
      "enum": [
        "left",
        "right",
        "center"
      ]
    },
    "AlignmentOnMobile": {
      "type": "enumeration",
      "required": true,
      "default": "top",
      "enum": [
        "top",
        "center",
        "bottom"
      ]
    },
    "BannerTitle": {
      "type": "component",
      "component": "shared.text-with-color",
      "repeatable": false
    },
    "IsRegularTitle": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "BannerSubTitle": {
      "type": "component",
      "component": "shared.text-with-color",
      "repeatable": false
    },
    "SubTitleFontSizeDesktop": {
      "type": "integer",
      "required": true,
      "default": 18
    },
    "CTAText": {
      "type": "component",
      "component": "shared.text-with-color",
      "repeatable": false
    },
    "ButtonText": {
      "type": "string"
    },
    "ButtonColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "ButtonColorOnHover": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "ButtonTextColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "ButtonTextColorOnHover": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "ButtonLink": {
      "type": "string"
    },
    "IsExternalLink": {
      "type": "boolean",
      "default": false
    },
    "StartDate": {
      "type": "datetime",
      "required": false
    },
    "EndDate": {
      "type": "datetime",
      "required": false
    },
    "mobile_375": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "mobile_480": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tablet_768": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "laptop_1024": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "desktop_1440": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    }
  },
  "config": {}
}
