{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "header": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "metaTag": {
      "type": "component",
      "component": "shared.meta-tag",
      "repeatable": false
    },
    "title": {
      "type": "component",
      "component": "shared.text-with-color",
      "repeatable": false,
      "required": true
    },
    "previewText": {
      "type": "component",
      "component": "shared.text-with-color",
      "repeatable": false,
      "required": true
    },
    "previewImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "postDate": {
      "type": "datetime",
      "required": true
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "bubspotUrl": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
