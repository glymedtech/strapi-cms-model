{
  "kind": "collectionType",
  "collectionName": "featured_products",
  "info": {
    "singularName": "featured-product",
    "pluralName": "featured-products",
    "displayName": "FeaturedProduct"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "Product Discount",
      "enum": [
        "Product Discount",
        "Free Shipping"
      ]
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "discount": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "datetime",
      "required": true,
      "unique": false
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "promotionThumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "promotionDayAnimation": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "promotionOpenProductVideo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "videos"
      ]
    }
  }
}
